	Proxies
	{
		Clamp
		{
			min 5
			max 5
			srcVar1 "$color2"
			resultVar "$emissiveBlendTint"
		}
		Clamp
		{
			min 0
			max 1
			srcVar1 "$color"
			resultVar "$color"
		}
		Clamp
		{
			min 0
			max 1
			srcVar1 "$color"
			resultVar "$phongtint"
		}
		Clamp
		{
			min 0
			max 0.05
			srcVar1 "$color"
			resultVar "$envmaptint"
		}
	}
}
