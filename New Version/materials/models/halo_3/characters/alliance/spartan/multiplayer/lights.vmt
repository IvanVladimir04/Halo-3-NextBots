"VertexLitGeneric"
{
	"$basetexture" "models/halo_3/characters/alliance/spartan/multiplayer/mp_masterchief"
	"$nodecal" 1
	"$additive" 1
	"$selfillum" 1
	
	"$detail" "models/halo_3/characters/alliance/spartan/multiplayer/mp_masterchief"
	"$detailblendfactor" 1
	"$detailblendmode" 0
	"$detailscale" 1

	Proxies
	{
		PlayerColor
		{
			resultVar	$color2 // pass the player color value to Gmod
			default		0.23 0.35 0.41 // unused for now.
		}
		Clamp
		{
			min 10
			max 10
			srcVar1 "$color"
			resultVar "$selfillumtint"
		}
		Clamp
		{
			min 0
			max 1
			srcVar1 "$color"
			resultVar "$color"
		}
	}
}