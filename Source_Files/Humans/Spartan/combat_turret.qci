//AIMLAYER SEQUENCES

$sequence "aim_combat_turret_still_up" {
	"aim_combat_turret_still_up_up_right" "aim_combat_turret_still_up_up_center"  "aim_combat_turret_still_up_up_left"
	"aim_combat_turret_still_up_mid_right" "aim_combat_turret_still_up_mid_center"  "aim_combat_turret_still_up_mid_left"
	"aim_combat_turret_still_up_down_right" "aim_combat_turret_still_up_down_center" "aim_combat_turret_still_up_down_left"
	blend "aim_yaw" -45 45
	blend "aim_pitch" -90 90
	blendwidth 3
	delta
	fadein 0.3
	fadeout 0.3
	hidden
}

$sequence "aim_combat_turret_move_up" {
	"aim_combat_turret_move_up_up_right" "aim_combat_turret_move_up_up_center"  "aim_combat_turret_move_up_up_left"
	"aim_combat_turret_move_up_mid_right" "aim_combat_turret_move_up_mid_center"  "aim_combat_turret_move_up_mid_left"
	"aim_combat_turret_move_up_down_right" "aim_combat_turret_move_up_down_center" "aim_combat_turret_move_up_down_left"
	blend "aim_yaw" -45 45
	blend "aim_pitch" -90 90
	blendwidth 3
	delta
	fadein 0.3
	fadeout 0.3
	hidden
}


//IDLE SEQUENCES

$sequence "combat_turret_idle_up" {
	"spartan_animations\combat_turret_idle.smd"
	activity "ACT_IDLE_TURRET" 1
	addlayer	"aim_combat_turret_still_up"
	fadein 0.2
	fadeout 0.2
	fps 30
	loop
}

//MOVEMENT SEQUENCES

$sequence "move_combat_turret_up" {
	"combat_turret_move_S"
	"combat_turret_move_W"
	"combat_turret_move_N"
	"combat_turret_move_E"
	"combat_turret_move_S"
	activity "ACT_RUN_TURRET" 1
	blend "move_yaw" -180 180
	addlayer	"aim_combat_turret_still_up"
	blendwidth 5
	fadein 0.2
	fadeout 0.2
	node "move_turret"
	fps 30
	loop
	{ event AE_CL_PLAYSOUND 2 "HALO3_spartan.Step" }
	{ event AE_CL_PLAYSOUND 8 "HALO3_spartan.Step" }
	walkframe 145 LX LY
}

$sequence "walk_combat_turret_up" {
	"combat_turret_walk_S"
	"combat_turret_walk_W"
	"combat_turret_walk_N"
	"combat_turret_walk_E"
	"combat_turret_walk_S"
	activity "ACT_WALK_TURRET" 1
	blend "move_yaw" -180 180
	addlayer	"aim_combat_turret_still_up"
	blendwidth 5
	fadein 0.2
	fadeout 0.2
	node "walk_turret"
	fps 30
	loop
	{ event AE_CL_PLAYSOUND 2 "HALO3_spartan.Step" }
	{ event AE_CL_PLAYSOUND 8 "HALO3_spartan.Step" }
	walkframe 145 LX LY
}



