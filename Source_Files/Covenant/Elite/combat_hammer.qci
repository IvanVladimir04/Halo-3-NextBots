$sequence "move_combat_hammer_up" {
	"combat_hammer_move_S"
	"combat_hammer_move_W"
	"combat_hammer_move_N"
	"combat_hammer_move_E"
	"combat_hammer_move_S"
	activity "ACT_RUN_ANGRY_MELEE" 1
	blend "move_yaw" -180 180
	addlayer	"aim_combat_hammer_move_up"
